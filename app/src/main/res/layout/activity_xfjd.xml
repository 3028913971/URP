<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"

              tools:context="com.jin123d.urp.XfjdActivity">


    <include
        layout="@layout/layout_title_back"/>

    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1">

                <TextView
                    android:textSize="@dimen/xfjd_size"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="平均学分绩点"
                    />

                <TextView
                    android:textSize="@dimen/xfjd_size"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_1"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">


                <TextView
                    android:textSize="@dimen/xfjd_size"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="班级排名(平均学分绩点)"
                    />

                <TextView
                    android:textSize="@dimen/xfjd_size"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_2"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:textSize="@dimen/xfjd_size"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="专业排名(平均学分绩点)"
                    />

                <TextView
                    android:textSize="@dimen/xfjd_size"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_3"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:textSize="@dimen/xfjd_size"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="加权学分成绩"
                />

            <TextView
                android:textSize="@dimen/xfjd_size"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_4"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:textSize="@dimen/xfjd_size"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="班级排名(加权学分绩点)"
                />

            <TextView
                android:textSize="@dimen/xfjd_size"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_5"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:textSize="@dimen/xfjd_size"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="专业排名(加权学分绩点)"
                />

            <TextView
                android:textSize="@dimen/xfjd_size"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:textSize="@dimen/xfjd_size"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="统计时间"
                />

            <TextView
                android:textSize="@dimen/xfjd_size"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_7"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
